<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-225dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_event"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_type"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="35sp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="60sp"/>


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="50sp"
                android:layout_gravity="center">

                <TableRow>
                    <TextView
                        android:text="Start Date: "
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/event_startdate"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_marginLeft="21sp"
                        android:text="Longitude: "
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/logitude"
                        android:textColor="@color/colorPrimary"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="End Date: "
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/event_endDate"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_marginLeft="21sp"
                        android:text="Latitude: "
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/event_lat"
                        android:textColor="@color/colorPrimary"/>

                </TableRow>


                <TableRow>
                    <TextView
                        android:text="Start Time: "
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/event_time"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:layout_marginLeft="21sp"
                        android:text="GPX Track: "
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/gpx"
                        android:textColor="@color/colorPrimary"/>

                </TableRow>

            </TableLayout>

            <fragment
                android:id="@+id/maps"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="150sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="380sp">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:layout_marginLeft="20sp"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="5sp"/>

                <TableRow>

                    <TextView
                        android:id="@+id/event_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="40sp"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/street_adress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />

                    <TextView
                        android:id="@+id/street_adress2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/colorAccent"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/plz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/colorAccent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/colorAccent"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Organiser"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="550sp">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Links"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:layout_marginLeft="20sp"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="5sp"/>

                <TableRow
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:id="@+id/imageViewLink"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/link"
                        android:layout_marginLeft="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL-WEBSITE ORGANISATION"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />


                </TableRow>

                <TableRow
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:id="@+id/imageViewEvent"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/event"
                        android:layout_marginLeft="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URL-WEBSITE EVENT"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />


                </TableRow>

                <TableRow
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:id="@+id/imageViewMail"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/mail"
                        android:layout_marginLeft="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-MAIL ADDRESS"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />


                </TableRow>

                <TableRow
                    android:layout_marginTop="10sp">

                    <ImageView
                        android:id="@+id/imageViewPhone"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/phone"
                        android:layout_marginLeft="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TELEPHONE-NUMBER"
                        android:layout_marginLeft="40sp"
                        android:textColor="@color/colorAccent"
                        />


                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="750sp">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social Media"
                        android:textSize="20sp"
                        android:textColor="@color/colorAccent"
                        android:layout_marginLeft="20sp"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="5sp"/>

                <TableRow>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/insta"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="20sp"
                        android:src="@drawable/face" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="60sp"
                        android:src="@drawable/twiiter" />


                </TableRow>

            </TableLayout>

        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>